@model PizzaShop.Models.PizzaShopViewModel


@*@{
        ViewBag.Title = "Order Your Pizza Now!;
    }*@

<div><h3>Order Your Pizza Now!</h3></div>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.LabelFor(model => model.PizzaName)
                @Html.EnumDropDownListFor(model => model.PizzaName, "-- Select --", new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.PizzaName,"", new { @class = "text-danger" })
                <input type="submit" value="Order" class="btn btn-default" />
            </div>
        </div>
    </div>
}



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
